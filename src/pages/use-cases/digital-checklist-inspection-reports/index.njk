    <section class="section p-top-xl p-bottom-xl alt">
        <div class="container">
            <div class="columns is-centered">
                <div class="column">
                    <div class="card">
                        <div class="columns">
                            <div class="column is-3 card-testimonial-img">
                               <picture>
              <source type="image/webp" data-srcset="/assets/use-cases/capptions_testimonial@2x.webp">
                                <img class="lazy" data-src="/assets/use-cases/capptions_testimonial@2x.png">
